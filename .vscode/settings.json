{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,

  "files.associations": {
    "*.json": "jsonc"
  },

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "json.schemas": [
    {
      "fileMatch": [
        "/index.json",
        "/config/*.json"
      ],
      "url": "http://json.schemastore.org/eslintrc"
    }
  ]
}
